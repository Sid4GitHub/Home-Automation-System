<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sid.android.roommanager.BluetoothPairedDeviceInternetHomeActivity">

        <Button
            android:id="@+id/bt_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic" />

        <Button
            android:id="@+id/bt_col_ch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_basic"
            android:text="Color Picker" />

        <Button
            android:id="@+id/bt_ran_col"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_col_ch"
            android:text="LED Animation" />


        <Button
            android:id="@+id/bt_cam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_ran_col"
            android:text="Camera" />

        <Button
            android:id="@+id/bt_set_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_cam"
            android:text="Alarm" />

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_set_alarm"
            android:text="Voice Op"
            android:id="@+id/bt_voi" />-->

        <Button
            android:id="@+id/bt_time_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_set_alarm"
            android:text="Sync Time" />

        <Button
            android:id="@+id/bt_schedule_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_set_alarm"
            android:text="Schedule On/Off" />

        <Button
            android:id="@+id/bt_wifi_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_schedule_on_off"
            android:text="Device Wifi Settings" />

        <Button
            android:id="@+id/bt_device_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_wifi_settings"
            android:text="Restart Device" />

        <Button
            android:id="@+id/bt_new_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_device_restart"
            android:text="New Device" />

    </RelativeLayout>
</ScrollView>