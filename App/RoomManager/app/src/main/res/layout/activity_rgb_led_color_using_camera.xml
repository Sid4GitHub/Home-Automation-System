<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sid.android.roommanager.FindRGBLedColorUsingCameraActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camImageView"
                android:layout_width="250sp"
                android:layout_height="150sp"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:layout_margin="10dp"/>

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#323232"
                android:columnCount="2" >

                <ImageView
                    android:id="@+id/imageViewForDominantColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForVibrantColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForDarkVibrantColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForLightVibrantColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForMutedColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForDarkMutedColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imageViewForLightMutedColor"
                    android:layout_height="120dp"
                    android:layout_width="180dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

            </GridLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_below="@+id/camImageView">

                <ImageView
                    android:id="@+id/camImageCol"
                    android:layout_width="250sp"
                    android:layout_height="150sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8sp"
                    android:background="#000000" />
            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

